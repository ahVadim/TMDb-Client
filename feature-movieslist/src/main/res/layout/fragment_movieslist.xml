<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_black">

    <View
        android:id="@+id/search_input_bg"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_32"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@drawable/movie_search_input_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/search_input_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        app:srcCompat="@drawable/ic_search_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_input_bg"
        app:layout_constraintStart_toStartOf="@id/search_input_bg"
        app:layout_constraintTop_toTopOf="@id/search_input_bg"/>

    <EditText
        android:id="@+id/search_input_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:background="@null"
        android:hint="@string/movies_search"
        android:inputType="text"
        android:maxLines="1"
        android:textAppearance="@style/Text.Content1"
        android:textColor="@color/light"
        android:textColorHint="@color/light"
        app:layout_constraintBottom_toBottomOf="@id/search_input_bg"
        app:layout_constraintEnd_toEndOf="@id/search_input_bg"
        app:layout_constraintStart_toEndOf="@id/search_input_icon"
        app:layout_constraintTop_toTopOf="@id/search_input_bg"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movies_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_input_bg"
        tools:itemCount="3"
        tools:listitem="@layout/item_movie_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>
