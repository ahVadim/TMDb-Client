<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/bg_black</item>
        <item name="colorPrimaryDark">@color/bg_black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:navigationBarColor">@color/bg_black</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/bg_black</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat"/>

    <style name="Text.H1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Text.H2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Text.H3">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Text.Content1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Text.Content2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Text.Caption1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Text.Caption2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Text.ButtonText">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Text.LinkText">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
    </style>
</resources>
