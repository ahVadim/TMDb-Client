<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/bg_black</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorSecondary">@color/purpure</item>
        <item name="colorError">@color/red</item>
        <item name="android:colorBackground">@color/bg_black</item>
        <item name="android:navigationBarColor">@color/bg_black</item>
        <item name="colorInputBackground">@color/search_input_bg</item>
        <item name="colorOnBackgroundSecondary">@color/dark_blue</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.App.Launcher">
        <item name="android:windowBackground">@color/bg_black</item>
    </style>
</resources>
